<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;net45;net6.0</TargetFrameworks>
    <Description>A very fast and minimal serializer</Description>
    <Company>Tomi Valkeinen</Company>
    <Copyright>Copyright © 2012-2022 Tomi Valkeinen</Copyright>
    <Version>4.1.2</Version>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <Authors>$(Company)</Authors>
    <PackageTags>Serializer</PackageTags>
    <RepositoryUrl>https://github.com/tomba/netserializer</RepositoryUrl>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <DefineConstants Condition="'$(TargetFramework)' == 'net45'">GENERATE_DEBUGGING_ASSEMBLY</DefineConstants>
  </PropertyGroup>
</Project>
